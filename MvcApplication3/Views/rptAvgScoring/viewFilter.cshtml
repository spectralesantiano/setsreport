@{
    Layout = null;
}

<script type="text/javascript" src="/Scripts/jquery-1.7.1.js">      </script>
<script type="text/javascript" src="/Scripts/bootstrap.js">      </script>
<script type="text/javascript" src="/Scripts/bootstrap-datepicker.js">      </script>
<script type="text/javascript" src="/Scripts/bootstrap-datepicker.min.js">      </script>

<style>
    
h5 {
   border-bottom: 1px solid #000;
   width:100%;
}

</style>

@*<h4 style="font:arial" class="FIlterHeader">Average Scoring - Average Scoring</h4>  *@


      
      @{string rptname = "rptAvgScoring";}
      
      @using (Ajax.BeginForm("DocumentViewerPartial", rptname, null,
                            null, new { id = rptname }))
      {
          <fieldset>  
                <div class="row-fluid">
                    <div class="span6" style="">
                           <div><h5>Criteria</h5></div>

                             @Html.Label("CSC:", new { @class = "control-label" })
                            <div class="controls">                
                            <div class="input-append">
                                @Html.DropDownList("CompanyName", ViewBag.CompanyName as SelectList, "", new { id = "lueCompany" })    
                                <button id = "clearlueCompany" type ="button" class="btn">x</button>
                            </div></div>

                            
                    
                         <br />

                          <button id = "btnFilter" type ="button" class="btn btn-primary">Apply Criteria</button>  
                    </div>

                    <div class="span6" style="">

                         <div><h5>Sorting</h5></div>
                       
                       <div style="display:none">
                        @Html.Label("Sort Selection:", new { @class = "control-label" })
                            <div class="controls">                   
                            <label>@Html.RadioButton("rgSortOrder", "Asc", true)
                                    Ascending 
                            </label>                  
                            <label>
                                @Html.RadioButton("rgSortOrder", "Desc")
                                Descending
                            </label></div>
                            <br /></div>

                          @Html.Label("Sort Report:", new { @class = "control-label" })
                                            
                        <div class="input-append">
                            @Html.DropDownList("SortReportBy", ViewBag.SortReportBy as SelectList, new { id = "lueSortReportBy" })    
                        </div>

                        <div class="controls">                 
                        <label>
                            @Html.RadioButton("rgSortReportOrder", "Asc", true)
                            Ascending
                        </label>
                        <label>@Html.RadioButton("rgSortReportOrder", "Desc")
                            Descending
                        </label></div>

                    </div>
                </div>          
                
                   <div>
                        @* ////---- 'txtselected' name is required ----------/////*@
                        @Html.Hidden("txtselected", "", new { id = "txtselected" })  
                  </div>

            </fieldset>
      }
      


<script type="text/javascript">

    var rpt = 'rptAvgScoring';

    $("#btnFilter").click(
    function () {
        //        var ss = $("#testname option:selected").val();

        var dict = new Object();

        dict["SiteName"] = $("#lueCompany").val();
        //dict["SiteName"] = $("#lueSignatory").val();

        $("#spin").css({ opacity: 0.0,
            visibility: 'visible'
        }).animate({ height: '100%', opacity: 1 }, 650); 

        // --- required ---//
        $("#SelectionView").load("/" + rpt + "/SelectionList?criteria=" + encodeURIComponent(JSON.stringify(dict)) + "&sortbyname=" + $("#cbeSortBy").val() + "&sortby=" + $("[name='rgSortOrder']:checked").val())

    }
    )

    $("#clearlueCompany").click(
        function () {
            $("#lueCompany").val("");
        }
    )

</script>
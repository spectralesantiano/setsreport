    $("#clearlueNat").click(
        function () {
            //            alert($("#lueTestName option:selected").val());
            $("#lueNat").val("");
            //            $("#lueTestName option:selected").removeAttr('selected');
        }
    )

        $("#clearlueCompany").click(
        function () {
            //            alert($("#lueTestName option:selected").val());
            $("#lueCompany").val("");
            //            $("#lueTestName option:selected").removeAttr('selected');
        }
    )

